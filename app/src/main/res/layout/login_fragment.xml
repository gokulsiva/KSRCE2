<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/Drawer1"
    android:layout_marginTop="57dp"
    android:id="@+id/loginFragment_id"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login"
        android:textColor="@color/Red"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="35sp"
        android:id="@+id/login_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="UserID"
        android:gravity="center_horizontal"
        android:textColor="@color/Black"
        android:textSize="28sp"
        android:ems="10"
        android:textStyle="bold"
        android:id="@+id/userid"
        android:layout_below="@+id/departmentSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userid"
        android:layout_marginTop="20sp"
        android:hint="Password"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="28sp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@color/Button"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:layout_marginTop="20sp"
        android:id="@+id/login"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/accounttypeSpinner"
        android:background="@color/list_row_start_color"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_below="@+id/login_text"
        android:layout_centerHorizontal="true" />
    <Spinner
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/departmentSpinner"
        android:layout_marginTop="10sp"
        android:textAlignment="center"
        android:background="@color/list_row_start_color"
        android:gravity="center"
        android:layout_below="@+id/accounttypeSpinner"
        android:layout_centerHorizontal="true" />


</RelativeLayout>