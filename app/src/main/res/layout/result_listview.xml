<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/list_result"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="@string/result_subject"
        android:textSize="30sp"
        android:textColor="@color/Green"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:id="@+id/result_subject"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="@string/result_grade"
        android:textSize="30sp"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:gravity="center_horizontal"
        android:id="@+id/result_grade"
        android:layout_alignBottom="@+id/result_subject"
        android:layout_toRightOf="@+id/result_subject"
        android:layout_toEndOf="@+id/result_subject" />
</RelativeLayout>